<script>
    const scrollCoffee = document.getElementById('scrollCoffee');

    function scrollSpy() {
        if (window.scrollY > 4000) {
            scrollCoffee.classList.add('show');
        } else {
            scrollCoffee.classList.remove('show');
        }
    }

    window.addEventListener('scroll', scrollSpy);
    scrollSpy();
</script>

<a
    id="scrollCoffee"
    class="scale-75 duration-300 transition-all opacity-0 ease-in-out translate-y-8 hidden md:block fixed bottom-[1.5rem] right-[4.2rem] hover:right-[4.5rem] hover:scale-110"
    href="https://ko-fi.com/R5R8G9I54"
    target="_blank">
    <img
        height="36"
        style="border:0px;height:36px;"
        src="https://storage.ko-fi.com/cdn/kofi1.png?v=3"
        border="0"
        alt="Buy Me a Coffee at ko-fi.com"
    />
</a>

<style>
    .show {
        @apply md:opacity-100 md:translate-y-0 scale-100;
    }
</style>
