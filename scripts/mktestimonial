#!/usr/bin/env bash

name=$@
slug=$(echo "$name" | get-slug)
file="$(direnvlocation)/src/content/testimonials/$slug.md"

touch "$file"
output="---\nname: '$name'\nslug: '$slug'\njob: ''\nlink: ''\nduration: 8\nfor: ['']\n---\n\nLorem ipsum dolor sit amet."
printf -- "$output" >"$file"
printf -- "$output"
